            </Button>
            <VBox alignment="BOTTOM_CENTER" prefHeight="0.0" prefWidth="263.0"/>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="25.0"
                    prefWidth="202.0" text="Back to Login">
